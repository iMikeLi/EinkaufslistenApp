<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EinkaufslistenApp.MainMenuPage"
             Style="{StaticResource MainPageStyle}"
             Title="Hauptmenü">

    <Grid RowDefinitions="3*, 2*, 5*" Padding="20" VerticalOptions="FillAndExpand" RowSpacing="20">

        <!-- Erster Button -->
        <Border Grid.Row="0"
                Style="{StaticResource MainBorderStyle}">
            <Button Text="📝 Einkaufsliste"
                    Style="{StaticResource MainButtonStyle}"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    Clicked="OnCreateShoppingListClicked" />
        </Border>

        <!-- Zweiter Button -->
        <Border Grid.Row="1"
                Style="{StaticResource MainBorderStyle}">
            <Button Text="🏬 Supermarkt"
                    Style="{StaticResource MainButtonStyle}"
                    BackgroundColor="{StaticResource SecondaryColor}"
                    Clicked="OnCreateSupermarketClicked" />
        </Border>

        <!-- Dritter Button -->
        <Border Grid.Row="2"
                Style="{StaticResource MainBorderStyle}">
            <Button Text="🛒 Einkaufen"
                    Style="{StaticResource MainButtonStyle}"
                    BackgroundColor="{StaticResource AccentColor}"
                    Clicked="OnShoppingClicked" />
        </Border>

    </Grid>

</ContentPage>
